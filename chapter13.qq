                return np.exp(1 / x)
            x = np.linspace(-2.7, 2.7, 211)
            plt.figure(figsize=(4, 4))

            plt.plot(x, f(x), label='$y=e^{1/x}$')
            
            plt.legend()
            
            ob.center_spines(grid=False, minor_ticks=False)
